@import "../common/index.wxss";


.swiper {
  height: 320rpx;
}
.slide-image {
  display: block;
  width: 100%;
}

.item .item-hd {
  width: 100%;
  margin: 0;
  padding: 0;
  position: relative;
  height: 80rpx;
  line-height: 80rpx;
  overflow: hidden;
  text-align: center;
  font-size: 30rpx;
  color: #555;
}

#blocks .item .name {
  display: inline-block;
  position: relative
}

#blocks .item .name::before,
#blocks .item .name::after {
  content: '';
  width: 64rpx;
  height: 2px;
  border-radius: 2px;
  background-color: #1cd39b;
  position: absolute
}

#blocks .item .name::before {
  left: -40rpx;
  top: 50%;
  -webkit-transform: translateX(-100%) translateY(-50%);
  -ms-transform: translateX(-100%) translateY(-50%);
  transform: translateX(-100%) translateY(-50%)
}

#blocks .item .name::after {
  right: -40rpx;
  top: 50%;
  -webkit-transform: translateX(100%) translateY(-50%);
  -ms-transform: translateX(100%) translateY(-50%);
  transform: translateX(100%) translateY(-50%)
}

#blocks .item .list-bd {
  margin: 0;
  padding: 0 20rpx;
}

#blocks .item .list-bd:before,
#blocks .item list-bd:after {
  content: " ";
  display: table;
}

#blocks .item .list-bd:after {
  clear: both
}

#blocks .item .list-bd:before,
#blocks .item .list-bd:after {
  content: " ";
  display: table;
}

#blocks .item .list-bd:after {
  clear: both
}

#blocks .item .list-bd .list {
  width: 48%;
  position: relative;
  float: left;
  margin-left: 10rpx;
  margin-bottom: 10rpx;
  font-size: 20rpx;
}

#blocks .item .list-bd .list .link {
  color: #333;
  text-decoration: none
}

#blocks .item .list-bd .list .cover {
  width: 100%;
  height: 200rpx;
  border-radius: 6rpx;
  overflow: hidden;
  position: relative
}

#blocks .item .list-bd .list .cover img {
  display: block;
  width: 100%;
  height: 100%
}

#blocks .item .list-bd .list .cover .cate {
  height: 32rpx;
  line-height: 32rpx;
  padding: 0 6rpx;
  color: #fff;
  z-index: 2;
  position: absolute;
  left: 50%;
  top: 0;
  font-size: 18rpx;
  -webkit-transform: translateX(-50%);
  -ms-transform: translateX(-50%);
  transform: translateX(-50%);
  text-shadow: 0 0 2px rgba(0,0,0,.2)
}

#blocks .item .list-bd .list .cover .cate::before {
  content: '';
  height: 0;
  width: 100%;
  position: absolute;
  top: 0;
  left: 50%;
  -webkit-transform: translateX(-50%);
  -ms-transform: translateX(-50%);
  transform: translateX(-50%);
  z-index: -1;
  border-top: 32rpx solid #1cd39b;
  border-left: 6rpx solid transparent;
  border-right: 6rpx solid transparent;
  opacity: .9
}

#blocks .item .list-bd .list .cover .title {
  width: 100%;
  height: 36rpx;
  line-height: 36rpx;
  padding: 10rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: #fff;
  background-color: rgba(0,0,0,.5);
  position: absolute;
  left: 0;
  bottom: 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap
}

#blocks .item .list-bd .list .info {
  width: 100%;
  height: 40rpx;
  overflow: hidden;
  line-height: 40rpx;
  font-size: 24rpx;
  color: #333;
  position: relative
}

#blocks .item .list-bd .list .info .name {
  width: 210rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap
}

#blocks .item .list-bd .list .info .person_num {
  position: absolute;
  right: 0;
  top: 0;
  font-size: 24rpx;
  color: #999;
  padding-left: 24rpx;
  height: 40rpx;
  overflow: hidden
}

#blocks .item .list-bd .list .info .person_num::before {
  content: '';
  position: absolute;
  display: block;
  width: 25rpx;
  height: 20rpx;
  background: url(https://i.h2.pdim.gs/24d33cd0a7d81487b91f7c064fa72d17.png) no-repeat center;
  background-size: 25rpx 20rpx;
  left: 0;
  top: 50%;
  -webkit-transform: translateY(-50%);
  -ms-transform: translateY(-50%);
  transform: translateY(-50%)
}

#blocks .item .more {
  height: 60rpx;
  line-height: 40rpx;
  padding-bottom: 20rpx;
  text-align: center
}

#blocks .item .more a {
  font-size: 22rpx;
  color: #1cd39b
}